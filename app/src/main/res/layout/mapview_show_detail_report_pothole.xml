<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <ImageView
        android:id="@+id/home_indicator_successful_report_poholtdetail"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@drawable/home_indicator">

    </ImageView>

    <TextView
        android:id="@+id/tv_title"
        android:layout_below="@+id/home_indicator_successful_report_poholtdetail"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:text="Pothole Detail"
        android:textSize="20sp"
        android:textStyle="bold" />
<RelativeLayout
    android:id="@+id/relative_location"
    android:layout_below="@+id/tv_title"
    android:layout_width="match_parent"
    android:layout_height="48dp">
    <TextView
        android:id="@+id/tv_location_label"
        android:layout_alignParentLeft="true"
        android:layout_width="111dp"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp"
        android:text="Location:" />

    <TextView
        android:id="@+id/tv_location"
        android:layout_width="215dp"
        android:layout_height="48dp"
        android:layout_alignParentRight="true"
        android:text="Khu phố 6, P.Linh Trung, Tp.Thủ Đức, Tp.Hồ Chí Minh"
        android:textAlignment="viewEnd" />

</RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative_sereventy"
        android:layout_below="@id/relative_location"
        android:layout_width="match_parent"
        android:layout_height="48dp">
        <TextView
            android:id="@+id/tv_severity_label"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_width="111dp"
            android:layout_height="30dp"
            android:layout_marginTop="16dp"
            android:text="Severity:" />

        <TextView
            android:id="@+id/tv_severity"
            android:layout_width="215dp"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:text="LowG"
            android:textAlignment="viewEnd" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative_longtitudeX"
        android:layout_below="@id/relative_sereventy"
        android:layout_width="match_parent"
        android:layout_height="48dp">
        <TextView
            android:id="@+id/tv_longtitudeX_label"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_width="111dp"
            android:layout_height="30dp"
            android:layout_marginTop="16dp"
            android:text="Longtitude (X):" />

        <TextView
            android:id="@+id/tv_longtitudex"
            android:layout_width="215dp"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:text="10.755368"
            android:textAlignment="viewEnd" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative_LatitudeY"
        android:layout_below="@id/relative_longtitudeX"
        android:layout_width="match_parent"
        android:layout_height="48dp">
        <TextView
            android:id="@+id/tv_LatitudeY_label"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_width="111dp"
            android:layout_height="30dp"
            android:layout_marginTop="16dp"
            android:text="Latitude (Y):" />

        <TextView
            android:id="@+id/tv_latitudeY"
            android:layout_width="215dp"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:text="10.755368"
            android:textAlignment="viewEnd" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative_report_time"
        android:layout_below="@id/relative_LatitudeY"
        android:layout_width="match_parent"
        android:layout_height="48dp">
        <TextView
            android:id="@+id/tv_report_time_label"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_width="111dp"
            android:layout_height="30dp"
            android:layout_marginTop="16dp"
            android:text="Report time:" />

        <TextView
            android:id="@+id/tv_report_time"
            android:layout_width="215dp"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:text="14:00:00 10/01/2004"
            android:textAlignment="viewEnd" />
    </RelativeLayout>
    
    <Button
        android:id="@+id/btn_back_pothole_detail_map"
        android:layout_width="343dp"
        android:layout_centerHorizontal="true"
        android:layout_height="56dp"
        android:layout_below="@+id/relative_report_time"
        android:layout_marginTop="335dp"
        android:text="Back" />

</RelativeLayout>