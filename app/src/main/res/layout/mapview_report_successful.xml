<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F0F0F0">


    <ImageView
        android:id="@+id/home_indicator_successful_report"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@drawable/home_indicator">
    </ImageView>

    <TextView
        android:id="@+id/title"
        android:layout_below="@+id/home_indicator_successful_report"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Successful"
        android:textColor="#003A8C"
        android:textStyle="bold"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/message"
        android:layout_below="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Thank you for reporting the pothole and contributing to the community."
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/badge"
        android:layout_below="@+id/message"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_successful_add_6" />

    <Button
        android:id="@+id/show_detail_report_button"
        android:layout_below="@+id/badge"
        android:layout_marginTop="20dp"
        android:layout_width="375dp"
        android:layout_height="68dp"
        android:layout_centerHorizontal="true"
        android:text="Show" />

</RelativeLayout>