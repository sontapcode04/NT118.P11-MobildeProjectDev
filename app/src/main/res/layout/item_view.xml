<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="16dp"
    android:background="@drawable/coner"
    android:elevation="4dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="10dp">

    <!-- Icon cảnh báo -->
    <ImageView
        android:id="@+id/warning_icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/warning_icon"
        android:contentDescription=""
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true" />

    <!-- Nội dung chính -->
    <LinearLayout
        android:id="@+id/text_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/warning_icon"
        android:layout_marginStart="15dp"
        android:orientation="vertical">

<!--        &lt;!&ndash; Địa chỉ &ndash;&gt;-->
<!--        <TextView-->
<!--            android:id="@+id/address_text"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="@string/phat_hien_luc"-->
<!--            android:textSize="16sp"-->
<!--            android:textColor="#000000"-->
<!--            android:maxLines="1"-->
<!--            android:ellipsize="end" />-->

        <!-- Thông tin phụ -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">

            <!-- Biểu tượng thời gian -->
            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/clock"
                android:contentDescription=""
                android:layout_marginEnd="4dp" />

            <!-- Thời gian -->
            <TextView
                android:id="@+id/createAt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="14sp"
                android:textColor="#666666" />
        </LinearLayout>

        <!-- Tọa độ -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">

            <!-- Biểu tượng tọa độ -->
            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/location"
                android:contentDescription=""
                android:layout_marginEnd="4dp" />

            <!-- Văn bản tọa độ -->
            <TextView
                android:id="@+id/latitude"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="14sp"
                android:textColor="#666666" />
            <TextView
                android:id="@+id/longitude"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="14sp"
                android:layout_marginLeft="20dp"
                android:textColor="#666666" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">

            <!-- Biểu tượng tọa độ -->
            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/severity32"
                android:contentDescription=""
                android:layout_marginEnd="4dp" />

            <!-- Văn bản tọa độ -->
            <TextView
                android:id="@+id/severity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="14sp"
                android:textColor="#666666" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
